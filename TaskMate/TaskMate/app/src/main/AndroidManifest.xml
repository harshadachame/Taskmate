<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskMate"
        tools:targetApi="31">
        <activity
            android:name=".EditTask"
            android:exported="false"
            android:label="@string/title_activity_edit_task"
            android:theme="@style/Theme.TaskMate" />
        <activity
            android:name=".AddTask"
            android:exported="false"
            android:label="@string/title_activity_add_task"
            android:theme="@style/Theme.TaskMate" />
        <activity
            android:name=".TaskScreen"
            android:exported="true"
            android:label="@string/title_activity_task_screen"
            android:theme="@style/Theme.TaskMate">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TaskDetailScreen"
            android:exported="false"
            android:label="@string/title_activity_task_detail_screen"
            android:theme="@style/Theme.TaskMate" />
    </application>

</manifest>